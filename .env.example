# Veritabanı bağlantı bilgileri
DATABASE_URL=postgresql://kullanici:sifre@localhost:5432/veritabani
PGUSER=kullanici
PGPASSWORD=sifre
PGPORT=5432
PGDATABASE=veritabani
PGHOST=localhost

# Telegram Bot token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Flask ayarları
FLASK_SECRET_KEY=your_flask_secret_key_here
FLASK_ENV=production  # development, production
FLASK_DEBUG=0  # 0=Kapalı, 1=Açık

# Log ayarları
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/bot.log

# Webhook ayarları (isteğe bağlı, polling yerine webhook kullanmak için)
USE_WEBHOOK=false  # true, false
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_PORT=8443
WEBHOOK_CERT_PATH=/path/to/cert.pem
WEBHOOK_PRIVATE_KEY_PATH=/path/to/private.key